<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView15"
        android:background="#3c000000"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Vay"
        android:id="@+id/textView16"
        android:textSize="40dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/llDiVay_Vay">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:id="@+id/btnDiVay_Vay"
                android:adjustViewBounds="false"
                android:background="@drawable/divay" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llChoVay_Vay">

            <ImageButton
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:id="@+id/btnChoVay_Vay"
                android:background="@drawable/chovay" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay Láº¡i"
        android:id="@+id/btnreturn_Vay"
        android:layout_gravity="center_horizontal" />

</LinearLayout>