<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView6"
        android:background="#3c000000"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tạo Mới"
        android:id="@+id/textView7"
        android:textSize="40dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etName_Logup"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPass_Logup"
        android:layout_below="@+id/etName_Logup"
        android:layout_alignLeft="@+id/etName_Logup"
        android:layout_alignStart="@+id/etName_Logup"
        android:layout_alignRight="@+id/etName_Logup"
        android:layout_alignEnd="@+id/etName_Logup"
        android:password="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etXN_Logup"
        android:layout_below="@+id/etPass_Logup"
        android:layout_alignLeft="@+id/etPass_Logup"
        android:layout_alignStart="@+id/etPass_Logup"
        android:layout_alignRight="@+id/etPass_Logup"
        android:layout_alignEnd="@+id/etPass_Logup"
        android:password="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etLuong_Logup"
        android:inputType="number"
        android:layout_below="@+id/etXN_Logup"
        android:layout_alignLeft="@+id/etXN_Logup"
        android:layout_alignStart="@+id/etXN_Logup"
        android:layout_alignRight="@+id/etXN_Logup"
        android:layout_alignEnd="@+id/etXN_Logup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên:"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:layout_alignTop="@+id/etName_Logup"
        android:layout_toLeftOf="@+id/etName_Logup"
        android:layout_toStartOf="@+id/etName_Logup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật Khẩu:"
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:layout_below="@+id/etName_Logup"
        android:layout_toLeftOf="@+id/etPass_Logup"
        android:layout_toStartOf="@+id/etPass_Logup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác Nhận:"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_alignTop="@+id/etXN_Logup"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lương:"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:layout_alignTop="@+id/etLuong_Logup"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo Mới"
        android:id="@+id/btnCreate_Logup"
        android:layout_below="@+id/etLuong_Logup"
        android:layout_toLeftOf="@+id/btnCancel_Logup"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Huỷ"
        android:id="@+id/btnCancel_Logup"
        android:layout_below="@+id/etLuong_Logup"
        android:layout_alignRight="@+id/etLuong_Logup"
        android:layout_alignEnd="@+id/etLuong_Logup" />

</RelativeLayout>