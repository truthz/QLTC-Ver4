<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView17"
        android:background="#3c000000"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Đổi Mật Khẩu"
        android:id="@+id/textView18"
        android:textSize="40dp"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật Khẩu Cũ:"
            android:id="@+id/textView19"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView20"
            android:layout_alignStart="@+id/textView20" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etMKC_DoiMatKhau"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etMKM_DoiMatKhau"
            android:layout_below="@+id/etMKC_DoiMatKhau"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etXNMK_DoiMatKhau"
            android:layout_below="@+id/etMKM_DoiMatKhau"
            android:layout_alignLeft="@+id/etMKM_DoiMatKhau"
            android:layout_alignStart="@+id/etMKM_DoiMatKhau" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật Khẩu Mới:"
            android:id="@+id/textView20"
            android:textSize="20dp"
            android:layout_alignTop="@+id/etMKM_DoiMatKhau"
            android:layout_toLeftOf="@+id/etMKM_DoiMatKhau"
            android:layout_toStartOf="@+id/etMKM_DoiMatKhau" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Nhận"
            android:id="@+id/textView21"
            android:textSize="20dp"
            android:layout_alignTop="@+id/etXNMK_DoiMatKhau"
            android:layout_toLeftOf="@+id/etXNMK_DoiMatKhau"
            android:layout_toStartOf="@+id/etXNMK_DoiMatKhau" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huỷ"
            android:id="@+id/btnCancel_DoiMatKhau"
            android:layout_alignTop="@+id/btnXN_DoiMatKhau"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="49dp"
            android:layout_marginEnd="49dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác Nhận"
            android:id="@+id/btnXN_DoiMatKhau"
            android:layout_below="@+id/etXNMK_DoiMatKhau"
            android:layout_toLeftOf="@+id/btnCancel_DoiMatKhau"
            android:layout_alignLeft="@+id/textView21"
            android:layout_alignStart="@+id/textView21" />
    </RelativeLayout>

</LinearLayout>