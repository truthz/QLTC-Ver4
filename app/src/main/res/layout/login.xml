<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/textView3"
        android:background="#3c000000"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Đăng Nhập"
        android:id="@+id/textView4"
        android:textSize="40dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/etPass_Logup"
        android:hint="Nhập Mật Khẩu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:layout_below="@+id/textView4"
        android:password="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:id="@+id/btnDN"
        android:layout_below="@+id/etPass_Logup"
        android:layout_alignLeft="@+id/etPass_Logup"
        android:layout_alignStart="@+id/etPass_Logup"
        android:layout_toLeftOf="@+id/btnTM"
        android:layout_toStartOf="@+id/btnTM" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo Mới"
        android:id="@+id/btnTM"
        android:layout_alignTop="@+id/btnDN"
        android:layout_alignRight="@+id/etPass_Logup"
        android:layout_alignEnd="@+id/etPass_Logup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etUser"
        android:layout_alignBottom="@+id/etPass_Logup"
        android:layout_alignLeft="@+id/etPass_Logup"
        android:layout_alignStart="@+id/etPass_Logup"
        android:layout_marginBottom="49dp"
        android:layout_alignRight="@+id/btnTM"
        android:layout_alignEnd="@+id/btnTM"
        android:hint="Tên Đăng Nhập" />
</RelativeLayout>